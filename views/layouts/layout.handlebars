<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!--Materialize CSS File-->
    <link rel="stylesheet" href="/materialize-css/dist/css/materialize.min.css">
    <!--All Custom CSS Files-->
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/alert.css">
    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/getstarted.css">
    <link rel="stylesheet" href="/css/addclient.css">
    <link rel="stylesheet" href="/css/allclients.css">
    <link rel="stylesheet" href="/css/client.css">
    <link rel="stylesheet" href="/css/editclient.css">
    <link rel="stylesheet" href="/css/about.css">
    <title>Sample Node App</title>
</head>
<body class="">
    <div class="navbar-fixed header-navbar">
        <nav class="header-navbar grey darken-4">
            {{#if user}}
                <ul class="right">
                    <li class="tooltipped" data-position="bottom" data-tooltip="profile">
                        <a id="nav-profile" href="">{{user.profile_name}}</a>
                    </li>
                </ul>
            {{/if}}
            <div class="container">
                <div class="nav-wrapper">
                    {{#if user}}
                        <a href="/nodeville/home" class="brand-logo">
                            <span>Node</span> Ville
                        </a>
                    {{else}}
                        <a href="/home" class="brand-logo">
                            <span>Node</span> Ville
                        </a>
                    {{/if}}
                    
                    <a href="#!" data-target="mobile-nav" class="sidenav-trigger left">
                        <i class="material-icons">menu</i>
                    </a>
                    <ul class="hide-on-med-and-down right">
                        {{#if user}}
                            <li><a href="/nodeville/home">Home</a></li>
                            <li><a href="/nodeville/add.client">Add Client</a></li>
                            <li><a href="/nodeville/get.allclients">Clients</a></li>
                            <li><a href="/nodeville/about">About</a></li>
                            <li id="nav-logout"><a href="/user/logout">Logout</a></li>
                        {{else}}
                            <li><a href="/home">Home</a></li>
                            <li><a href="/user/register">Create Profile</a></li>
                            <li><a href="/user/login">Login</a></li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <section id="section-messages" class="center">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    {{#if success_msg}}
                        <div class="alert alert-flash alert-success valign-wrapper">
                            <span>{{success_msg}}</span>
                        </div>
                    {{/if}}
                </div>
                <div class="col s12">
                    {{#if error_msg}}
                        <div class="alert alert-flash alert-error valign-wrapper">
                            <span>{{error_msg}}</span>
                        </div>
                    {{/if}}
                </div>
                <div class="col s12">
                    {{#if error}}
                        <div class="alert alert-flash alert-error valign-wrapper">
                            <span>{{error}}</span>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div><br><br><br>
    </section>
    <!--Sidenav-->
    <ul class="sidenav" id="mobile-nav">
        {{#if user}}
            <li><a href="/nodeville/home">Home</a></li>
            <li><a href="/nodeville/add.client">Add Client</a></li>
            <li><a href="/nodeville/get.allclients">Clients</a></li>
            <li><a href="/nodeville/about">About</a></li>
            <li><a href="/user/logout">Logout</a></li>
        {{else}}
            <li><a href="/home">Home</a></li>
            <li><a href="/user/register">Register</a></li>
            <li><a href="/user/login">Login</a></li>
        {{/if}}
    </ul>
    <!--Body-->
    {{{ body }}}
    <!--All Script Files-->
    <script src="/materialize-css/dist/js/materialize.min.js"></script>
    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="/js/ajax.js"></script>
    <script src="/js/init.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>
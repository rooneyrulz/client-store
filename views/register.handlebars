<section id="section-register" class="section">
    <div class="container">
        <br><br>
        <div class="row">
            <div class="col s12">
                {{#if errors}}
                    {{#each errors}}
                        <div class="alert alert-error valign-wrapper">
                            <span>{{msg}}</span>
                            <span id="btn-close" class="alert-close">&times;</span>
                        </div>
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
    {{#if title}}
        <div class="container register-title">
            <h4>{{ title }}</h4>
            <hr>
        </div>
    {{/if}}
    <div class="container">
        <div class="card-panel card-register">
            <form action="/user/register" method="POST" id="user-submit">
                <div class="row">
                    <div class="col s12 m6">
                        <div class="input-field">
                            <input type="text" id="fname" name="fname">
                            <label for="fname">First Name</label>
                        </div>
                    </div>
                    <div class="col s12 m6">
                        <div class="input-field">
                            <input type="text" id="lname" name="lname">
                            <label for="lname">Last Name</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input type="text" id="profilename" name="profilename" class="">
                            <label for="profilename">Profile Name</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input type="email" id="email" name="email" class="validate">
                            <label for="email">Email</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input type="text" id="username" name="username" class="">
                            <label for="username">Username</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input type="password" id="password" name="password" class="">
                            <label for="password">Password</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <input type="password" id="password2" name="password2" class="">
                            <label for="password2">Confirm Password</label>
                        </div>
                    </div>
                </div>
                <button role="button" type="submit" class="btn green waves-effect waves-light" id="btn-register">Create</button>
            </form>
        </div>
    </div>
</section>